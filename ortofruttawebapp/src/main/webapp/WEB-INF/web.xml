<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<servlet>
		<servlet-name>magazzino</servlet-name>
		<servlet-class>it.dstech.ortofruttawebapp.AggiungiProdotto</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>magazzino</servlet-name>
		<url-pattern>/aggiungi</url-pattern>
	</servlet-mapping>

<servlet>
		<servlet-name>aggiorna</servlet-name>
		<servlet-class>it.dstech.ortofruttawebapp.AggiornaLista</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>aggiorna</servlet-name>
		<url-pattern>/lista</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>vendi</servlet-name>
		<servlet-class>it.dstech.ortofruttawebapp.VendiProdotti</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>vendi</servlet-name>
		<url-pattern>/vendita</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>stampa</servlet-name>
		<servlet-class>it.dstech.ortofruttawebapp.StampaVenduto</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>stampa</servlet-name>
		<url-pattern>/venduto</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>rimozione</servlet-name>
		<servlet-class>it.dstech.ortofruttawebapp.RimuoviProdotto</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>rimozione</servlet-name>
		<url-pattern>/rimuovi</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>stampaProdotti</servlet-name>
		<servlet-class>it.dstech.ortofruttawebapp.GestioneStampaListe</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>stampaProdotti</servlet-name>
		<url-pattern>/prodotti</url-pattern>
	</servlet-mapping>
	
	<servlet>
        <servlet-name>cliente</servlet-name>
        <servlet-class>it.dstech.ortofruttacliente.AggiungiCliente</servlet-class>
    </servlet> 
    <servlet-mapping>
        <servlet-name>cliente</servlet-name>
        <url-pattern>/cliente</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>acquisto</servlet-name>
        <servlet-class>it.dstech.ortofruttacliente.AcquistoCliente</servlet-class>
    </servlet> 
    <servlet-mapping>
        <servlet-name>acquisto</servlet-name>
        <url-pattern>/acquisto</url-pattern>
    </servlet-mapping>
    
	  <servlet>
        <servlet-name>indietro</servlet-name>
        <servlet-class>it.dstech.ortofruttacliente.TornaIndietro</servlet-class>
    </servlet> 
    <servlet-mapping>
        <servlet-name>indietro</servlet-name>
        <url-pattern>/tornaIndietro</url-pattern>
    </servlet-mapping>
    
    
<welcome-file-list>
		<welcome-file>/Home.jsp</welcome-file>
	</welcome-file-list>
</web-app>
	